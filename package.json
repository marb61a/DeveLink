  },
  "homepage": "https://github.com/marb61a/DeveLink#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "concurrently": "^3.5.1",
    "express": "^4.16.3",
    "gravatar": "^1.6.0",
    "jsonwebtoken": "^8.2.1",
    "mongoose": "^5.1.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "tslint": "^5.10.0",
    "validator": "^10.2.0"
  },
  "devDependencies": {
